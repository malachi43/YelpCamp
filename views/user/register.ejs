<% layout('layout/boilerplate') -%>

<div class="container">
  <div class="row justify-content-center my-5">
    <div class="col-6">
      <h1 class="display-3 lead text-center">Register</h1>

      <form
        action="/auth/register"
        class="validate-form"
        method="post"
        novalidate
      >
        <div class="lead my-3 has-validation">
          <label for="username" class="form-label">Enter username:</label>
          <input
            type="text"
            name="user[username]"
            class="form-control"
            id="username"
            placeholder="username"
            required
          />
          <div class="invalid-feedback">Field cannot be empty</div>
        </div>
        <div class="lead my-3 has-validation">
          <label for="email" class="form-label">Enter email:</label>
          <input
            type="email"
            name="user[email]"
            id="email"
            class="form-control"
            placeholder="email"
            required
          />
          <div class="invalid-feedback">Not a valid email pattern</div>
        </div>
        <div class="lead my-3 has-validation">
          <label for="password" class="form-label">Enter password:</label>
          <input
            type="password"
            name="user[password]"
            class="form-control validate-form"
            id="password"
            placeholder="password"
            required
          />
          <div class="invalid-feedback">Field cannot be empty</div>
        </div>

        <button class="btn btn-outline-success">Register</button>
      </form>
    </div>
  </div>
</div>

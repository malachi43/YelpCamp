<% layout('layout/boilerplate') -%>
<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="lead vh-100 my-5">
        <div class="alert alert-danger shadow-lg" role="alert">
          <h4 class="alert-heading display-3">Error</h4>
          <p> <%= err.message %></p>
          <% if(process.env.NODE_ENV !== 'production') {%>
          <p><%= err.stack %></p>
          <hr />
          <p class="mb-0 display-3"><%= errorCode %></p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
